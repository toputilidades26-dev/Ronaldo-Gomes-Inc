<script>
let time = 15 * 60;
const countdown = document.getElementById("countdown");

setInterval(() => {
  let m = Math.floor(time / 60);
  let s = time % 60;
  countdown.textContent =
    (m < 10 ? "0" : "") + m + ":" + (s < 10 ? "0" : "") + s;
